pipeline{
    agent any
    tools {nodejs "NodeJS"}
    stages{
        stage("Insatll"){
            steps{
                sh "npm install"
            }
        }
        stage("Build"){
            steps{
                sh "npm run build"
            }
        }
        stage("Deploy"){
            steps{
                sh "rm -rf /usr/local/var/www/ang-app/dist"
                sh "cp -R /User/aakash/.jenkins/workspace/angoct/dist /usr/local/var/www/ang-app/dist"
            }
        }
    }
}